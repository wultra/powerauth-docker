<?xml version="1.0" encoding="UTF-8"?>
<Context>

    <!-- Database Configuration - JDBC -->
    <Parameter name="spring.datasource.url" value="${POWERAUTH_SERVER_DATASOURCE_URL}"/>
    <Parameter name="spring.datasource.username" value="${POWERAUTH_SERVER_DATASOURCE_USERNAME}"/>
    <Parameter name="spring.datasource.password" value="${POWERAUTH_SERVER_DATASOURCE_PASSWORD}"/>
    <Parameter name="spring.datasource.driver-class-name" value="${POWERAUTH_SERVER_DATASOURCE_DRIVER}"/>
    <Parameter name="spring.jpa.hibernate.ddl-auto" value="${POWERAUTH_SERVER_JPA_DDL_AUTO}"/>

    <!-- Configuration of Database Charset -->
    <Parameter name="spring.jpa.properties.hibernate.connection.CharSet" value="${POWERAUTH_SERVER_JPA_CHARSET}"/>
    <Parameter name="spring.jpa.properties.hibernate.connection.characterEncoding" value="${POWERAUTH_SERVER_JPA_CHARACTER_ENCODING}"/>
    <Parameter name="spring.jpa.properties.hibernate.connection.useUnicode" value="${POWERAUTH_SERVER_JPA_USE_UNICODE}"/>

    <!-- Additional JPA Configuration -->
    <Parameter name="spring.jpa.database-platform" value="${POWERAUTH_SERVER_JPA_DATABASE_PLATFORM}"/>

    <!-- Database Lock Timeout Configuration -->
    <Parameter name="spring.jpa.properties.lock.timeout" value="${POWERAUTH_SERVER_JPA_LOCK_TIMEOUT}"/>

    <!-- Database Configuration - JNDI -->
    <Parameter name="spring.datasource.jndi-name" value="${POWERAUTH_SERVER_DATASOURCE_JNDI_NAME}"/>

    <!-- JMX Configuration -->
    <Parameter name="spring.jmx.enabled" value="${POWERAUTH_SERVER_SPRING_JMX_ENABLED}"/>
    <Parameter name="spring.jmx.default-domain" value="${POWERAUTH_SERVER_SPRING_JMX_DEFAULT_DOMAIN}"/>

    <!-- HTTP Proxy Settings -->
    <Parameter name="powerauth.service.http.proxy.enabled" value="${POWERAUTH_SERVER_HTTP_PROXY_ENABLED}"/>
    <Parameter name="powerauth.service.http.proxy.host" value="${POWERAUTH_SERVER_HTTP_PROXY_HOST}"/>
    <Parameter name="powerauth.service.http.proxy.port" value="${POWERAUTH_SERVER_HTTP_PROXY_PORT}"/>
    <Parameter name="powerauth.service.http.proxy.username" value="${POWERAUTH_SERVER_HTTP_PROXY_USERNAME}"/>
    <Parameter name="powerauth.service.http.proxy.password" value="${POWERAUTH_SERVER_HTTP_PROXY_PASSWORD}"/>

    <!-- Service Connect Timeout in Milliseconds -->
    <Parameter name="powerauth.service.http.connection.timeout" value="${POWERAUTH_SERVER_HTTP_CONNECTION_TIMEOUT}"/>

    <!-- Token Timestamp Validity in Milliseconds -->
    <Parameter name="powerauth.service.token.timestamp.validity" value="${POWERAUTH_SERVER_TOKEN_TIMESTAMP_VALIDITY}"/>

    <!-- Security Configuration -->
    <Parameter name="powerauth.service.restrictAccess" value="${POWERAUTH_SERVER_RESTRICT_ACCESS}"/>

    <!-- Recovery Code Configuration -->
    <Parameter name="powerauth.service.recovery.maxFailedAttempts" value="${POWERAUTH_SERVER_RECOVERY_MAX_FAILED_ATTEMPTS}"/>

    <!-- Master DB encryption key -->
    <Parameter name="powerauth.server.db.master.encryption.key" value="${POWERAUTH_SERVER_MASTER_DB_ENCRYPTION_KEY}"/>

    <!-- Whether Biometry Is Enabled in Secure Vault -->
    <Parameter name="powerauth.service.secureVault.enableBiometricAuthentication" value="${POWERAUTH_SERVER_SECURE_VAULT_ENABLE_BIOMETRY}"/>

    <!-- Application Configuration -->
    <Parameter name="powerauth.service.applicationName" value="${POWERAUTH_SERVER_APPLICATION_NAME}"/>
    <Parameter name="powerauth.service.applicationDisplayName" value="${POWERAUTH_SERVER_APPLICATION_DISPLAY_NAME}"/>
    <Parameter name="powerauth.service.applicationEnvironment" value="${POWERAUTH_SERVER_APPLICATION_ENVIRONMENT}"/>

    <!-- Configure Correlation HTTP Header Configuration -->
    <Parameter name="powerauth.service.correlation-header.enabled" value="${POWERAUTH_SERVER_CORRELATION_HEADER_ENABLED}"/>
    <Parameter name="powerauth.service.correlation-header.name" value="${POWERAUTH_SERVER_CORRELATION_HEADER_NAME}"/>
    <Parameter name="powerauth.service.correlation-header.value.validation-regexp" value="${POWERAUTH_SERVER_CORRELATION_HEADER_VALUE_VALIDATION_REGEXP}"/>

    <!-- Custom Logging Configuration -->
    <Parameter name="logging.config" value="${POWERAUTH_SERVER_LOGGING}"/>

</Context>
